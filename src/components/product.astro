---
import type { Product } from "../types/product";

interface Props {
  product: Product;
}

const { id, image, title, price, description } = Astro.props.product;
---

<a href={`/products/${id}`} class="product">
  <img src={image} alt={title} />
  <h2 class="subtitle">{title}</h2>
  <p class="description">{description}</p>
  <p class="price">
    {
      price.toLocaleString("en-US", {
        style: "currency",
        currency: "USD",
        minimumFractionDigits: 2,
        maximumFractionDigits: 2,
      })
    }
  </p>
</a>

<style>
  * {
    text-decoration: none;
  }

  .product {
    background-color: #f9f9f9;
    color: #333;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: center;
    max-width: 320px;
    margin: 0 auto;
    transition:
      transform 0.1s,
      box-shadow 0.15s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .product:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .product img {
    max-width: 100%;
    max-height: 200px;
    height: auto;
    margin-bottom: 16px;
    border-radius: 12px;
    object-fit: cover;
  }

  .product p.description {
    font-size: 14px;
    color: #777;
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .product p.price {
    font-size: 20px;
    font-weight: 700;
    color: #e67e22;
    margin-top: 12px;
  }
</style>
